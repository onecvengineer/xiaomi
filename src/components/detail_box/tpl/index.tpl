<section class="detail-box">
  <div class="detail-box-wrap container clearfix">
    <div class="img">
      <img class="J_img" src="{{pic}}" alt="{{phone_name}}">
    </div>
    <div class="phone-info">
      <h3 class="title">{{phone_name}}</h3>
      <p class="desc">{{desc}}</p>
      <p class="price J_price">{{price}}元</p>
      <div class="option J_version clearfix">
        <h3 class="op-name">版本选择</h3>
        {{version}}
      </div>
      <div class="option J_color clearfix">
        <h3 class="op-name">颜色选择</h3>
        {{color}}
      </div>
      {{btnGroup}}
    </div>
  </div>
</section>